<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="timerandbuzzer.cs.ualberta.ca.timerandbuzzer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartTimer"
            android:label="@string/title_activity_start_timer" >
        </activity>
        <activity
            android:name=".Players"
            android:label="@string/title_activity_players" >
        </activity>
        <activity
            android:name=".TwoPlayers"
            android:label="@string/title_activity_two_players" >
        </activity>
        <activity
            android:name=".ThreePlayers"
            android:label="@string/title_activity_three_players" >
        </activity>
        <activity
            android:name=".FourPlayers"
            android:label="@string/title_activity_four_players" >
        </activity>
        <activity
            android:name=".Listofrtime"
            android:label="@string/title_activity_listofrtime" >
        </activity>
        <activity
            android:name=".timeStatistics"
            android:label="@string/title_activity_time_statistics" >
        </activity>
        <activity
            android:name=".TwoPlayerList"
            android:label="@string/title_activity_two_player_list" >
        </activity>
    </application>

</manifest>
